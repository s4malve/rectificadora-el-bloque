---
import { type VariantProps, cva } from "cva";

interface Props extends Button {
	href: string;
	className?: string;
}
type Button = VariantProps<typeof button>;

export const button = cva(
	[
		"rounded-full flex items-center gap-x-2 font-semibold border transition-[color_border_background-color] text-nowrap group",
	],
	{
		variants: {
			style: {
				primary: "bg-stone-100 text-stone-950 hover:bg-transparent border-transparent hover:border-stone-100 hover:text-stone-100",
				secondary: "border-stone-950 text-stone-950 hover:bg-stone-950 hover:text-stone-100",
				tertiary: "border-stone-100 text-stone-100 hover:bg-stone-100 hover:text-stone-950",
			},
			size: {
				icon: "p-3",
				lg: "py-2 px-6",
			},
			position: {
				center: "justify-center",
				start: "justify-start",
			},
		},
		defaultVariants: {
			size: "lg",
			style: "primary",
			position: "center",
		},
	},
);
const { href, className, size, style, position } = Astro.props as Props;
---

<a
	href={href}
	target="_blank"
	rel="noopener noreferrer"
	class={button({ className, size, style, position })}><slot /></a
>
